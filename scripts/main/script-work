#!/usr/bin/env osascript

set nativeApps to {"Todoist", "/Applications/Hyper.app", "Google Chrome", "Calendar", "Spotify", "Messages", "Mail", "Slack"}
repeat with nativeApp in nativeApps
	run application nativeApp
end repeat

set webApps to {"https://docs.google.com/document/d/1O2Me9-4GoYfvEwrIXkyHDAJQs-P2eJXZ6YKJYqJhVWg", "https://github.com/eggheadio/egghead-instructor-center/pulls", "http://localhost:9009/", "http://localhost:3000"}
repeat with webApp in webApps
	do shell script "open " & webApp
end repeat

do shell script "script-windows"

delay 3
tell application "Google Chrome" to activate
set devToolsTabs to {4}
repeat with devToolsTab in devToolsTabs
	tell application "Google Chrome" to set active tab index of first window to devToolsTab
	tell application "System Events"
		keystroke "i" using {command down, option down}
	end tell
end repeat

delay 3
tell application "/Applications/Hyper.app" to activate
do shell script "script-fullscreen"
tell application "System Events"
  keystroke "t" using {command down}
  delay 1
  keystroke "cd \"$HOME\"/drive/work/egghead-instructor-center && script-split"
end tell

delay 3
return "Done"
