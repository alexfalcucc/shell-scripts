{
  "name": "%substitute_project_name",
  "version": "0.1.0",
  "scripts": {
    "dev": "watch 'yarn build' src",
    "test": "jest src --watch",
    "verify": "eslint src && jest src",
    "build": "babel src -d build",
    "release": "yarn version && git push && git push --tags",
    "prepublish": "yarn build"
  },
  "babel": {
    "presets": [
      "latest"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended"
    ],
    "env": {
      "es6": true,
      "node": true,
      "commonjs": true,
      "browser": true,
      "jest": true
    },
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    }
  },
  "jest": {
    "testEnvironment": "node"
  },
  "main": "build/index.js",
  "files": [
    "package.json",
    "README.md",
    "LICENSE.md",
    "build"
  ],
  "devDependencies": {
  },
  "dependencies": {
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/%substitute_user_name/%substitute_project_name.git"
  },
  "description": "%substitute_project_description",
  "author": "%substitute_user_full_name <%substitute_user_email> (%substitute_user_website)",
  "license": "MIT"
}
