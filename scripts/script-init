#!/bin/bash
set -euo pipefail


# ==================================================================
# VARIABLES
# ==================================================================

homebrew_packages=(
  "bash"
  "git"
  "heroku"
  "n"
  "node"
  "reattach-to-user-namespace"
  "shellcheck"
  "tmux"
  "vim"
)

ruby_gems=(
  "travis"
)

npm_global_packages=(
  "create-react-app"
  "csslint"
  "eslint"
  "eslint-plugin-react"
  "jsonlint"
)

fonts=(
  "font-fira-mono"
  "font-quicksand"
)

homebrew_cask_apps=(
  "1password"
  "anki"
  "balsamiq-mockups"
  "flux"
  "google-chrome"
  "google-drive"
  "google-photos-backup"
  "hyper"
  "karabiner"
  "rescuetime"
  "screenflow"
  "seil"
  "sketch"
  "slack"
  "slate"
  "spotify"
  "switchresx"
)


# ==================================================================
# SHELL
# ==================================================================

echo "Making bash the default shell"
chsh -s /bin/bash


# ==================================================================
# MACOS
# ==================================================================

# HIDDEN FILES
echo "Configuring hidden files to show"
defaults write com.apple.finder AppleShowAllFiles YES
killall Finder

# SCREENSHOTS
echo "Configuring screenshots to save in Downloads"
defaults write com.apple.screencapture location ~/Downloads
killall SystemUIServer


# ==================================================================
# PACKAGES
# ==================================================================

# HOMEBREW
echo "Installing Homebrew packages"
for homebrew_package in "${homebrew_packages[@]}"; do
  brew install "$homebrew_package"
done

# RUBY
echo "Installing Ruby gems"
for ruby_gem in "${ruby_gems[@]}"; do
  gem install "$ruby_gem"
done

# NPM
echo "Installing npm global packages"
for npm_global_package in "${npm_global_packages[@]}"; do
  npm install -g "$npm_global_package"
done

# CONFIG
echo "Upgrade to latest Node"
n latest


# ==================================================================
# DOTFILES
# ==================================================================

echo "Symlinking dotfiles"
for file in $(find "$HOME/drive/settings/dotfiles" -depth 1 -exec basename {} \;); do
  ln -s "$HOME/drive/settings/dotfiles/$file" "$HOME/$file"
done


# ==================================================================
# VIM PLUGINS
# ==================================================================

echo "Installing Vundle"
git clone https://github.com/VundleVim/Vundle.vim.git ~/.vim/bundle/Vundle.vim

echo "Installing Vundle Vim plugins"
vim +PluginInstall +qall

echo "Making UltiSnips symlinks"
mkdir ~/.vim/UltiSnips/
ln -s ~/drive/settings/syncfiles/UltiSnips/* ~/.vim/UltiSnips/


# ==================================================================
# FONTS
# ==================================================================

echo "Adding Homebrew fonts tap"
brew tap caskroom/fonts
echo "Installing Homebrew fonts"
for font in "${fonts[@]}"; do
  brew cask install "$font"
done


# ==================================================================
# GUI APPS
# ==================================================================

echo "Installing Homebrew cask apps"
for homebrew_cask_app in "${homebrew_cask_apps[@]}"; do
  brew cask install "$homebrew_cask_app"
done


# ==================================================================
# MANUAL SETUP
# ==================================================================

# NPM
echo "Log in to npm CLI"
npm login

# HEROKU
echo "Log in to Heroku CLI"
heroku login

# TRAVIS
echo "Log in to Travis CI CLI"
travis login


# ==================================================================

echo "Done"
