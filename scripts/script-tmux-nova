#!/bin/bash
set -euo pipefail

cd ~
tmux new-session -d -s nova
script-tmux-window "nova-vim" "projects/nova-vim" 2 "mkdir -p ~/.vim/colors && ln -sf "$(pwd)"/colors/nova.vim ~/.vim/colors/nova.vim && (npm run dev; rm ~/.vim/colors/nova.vim)"
tmux kill-window -t 0
tmux select-window -t 1
tmux attach-session -d 
