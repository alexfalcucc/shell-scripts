#!/bin/bash
set -euo pipefail

websites=(
  "https://www.icloud.com/#calendar"
  "https://www.icloud.com/#mail"
  "https://app.youneedabudget.com"
  "https://www.lds.org/study-tools"
  "https://feedly.com"
  "https://read.amazon.com/notebook"
  "https://read.amazon.com"
  "https://ankiweb.net"
  "https://app.meetedgar.com"
  "https://tweetdeck.twitter.com"
  "https://utahjavascript.slack.com"
  "https://www.facebook.com"
)

open -a "Google Chrome" --args --profile-directory="Profile 3"
for website in "${websites[@]}"; do
  open "$website"
done

native_apps=(
  "Todoist"
  "Messages"
  "Photos"
  "Day One"
)

for native_app in "${native_apps[@]}"; do
  open -a "$native_app"
done
