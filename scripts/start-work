#!/bin/bash
set -euo pipefail

networksetup -setairportpower en0 off

websites=(
  "https://open.spotify.com/collection/playlists"
  "https://roederstudios.slack.com"
  "https://trello.com/b/55pvbyFV/ropig-dev?menu=filter&filter=label:Front-end%20needed"
)

open -a "Google Chrome" --args --profile-directory="Profile 1"
for website in "${websites[@]}"; do
  open "$website"
done

native_apps=(
  "Todoist"
)

for native_app in "${native_apps[@]}"; do
  open -a "$native_app"
done
